.rgba0
  width 200px
  height 80px
  border 1px solid #000
  
// 前景色
.rgba1
  .norgba
    color rgb(255,0,0)
  .rgba
    color rgb(255,0,0)
    color rgba(255,0,0,0.5)
// 边框
.rgba2
  .norgba
    border 5px solid rgb(255,0,0)
    width 150px
    margin 0 auto
  .rgba
    border 5px solid rgb(255,0,0)
    border 5px solid rgba(255,0,0,0.5)
    width 150px
    margin 5px auto
// 文本阴影
.rgba3
  .norgba
    text-shadow 0 2px 1px rgb(255,0,0)
  .rgba
    text-shadow 0 2px 1px rgb(255,0,0)
    text-shadow 0 2px 1px rgba(255,0,0,0.5)
// 边框文本
.rgba4
  .norgba
    border 5px solid green
    width 150px
    margin 0 auto
    box-shadow 0 2px 2px rgb(255,0,0)
  .rgba
    border 5px solid green
    width 150px
    margin 10px auto
    box-shadow 0 2px 2px rgb(255,0,0)
    box-shadow 0 2px 2px rgba(255,0,0,0.5)
